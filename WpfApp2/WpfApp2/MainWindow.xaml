<Window x:Class="WpfApp2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
         <TextBox  Grid.Row="1" x:Name="textBox" Text="TextBox" TextWrapping="Wrap" Width="120"/>
        <Button x:Name="button" Content="Button" Click="button_Click"/>
        <Button x:Name="button1" Content="Button" HorizontalAlignment="Left" Margin="232,33,0,0" Grid.Row="2" VerticalAlignment="Top"
                Background="AliceBlue"
          KeyDown="OnButtonKeyDown"
           />

    </Grid>
</Window>
